@model OrderListViewModel

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h4>Name: @Model.FullName </h4>
        <h5>Address: @Model.Address</h5>
        <h5 class="card-title">
            Is pizza delivered:
            @if (@Model.IsDelivered)
            {
                <h3 class="text-success">Is delivered</h3>
            }
            else
            {
                <h3 class="text-danger">Not delivered</h3>
            }
        </h5>


    </div>
    <br />
    <a class="btn btn-danger" asp-area="" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    <br />
    <a class="btn btn-primary" asp-area="" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>