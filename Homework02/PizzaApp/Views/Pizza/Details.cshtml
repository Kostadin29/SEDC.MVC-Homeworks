@model PizzaViewModel

<div class="card text-white bg-info mb-3" style="max-width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Name: @Model.Name</h5>
        @if (Model.HasExtras)
        {
            <p class="card-text">Price + Extras: (@Model.Price + 10)</p>
        }
        else
        {
            <p class="card-text">Price: @Model.Price</p>
        }
        <p class="card-text"></p>
        @foreach (var size in Model.PizzaSizes)
        {
            <p class="card-text"> Sizes: @size</p>
        }
 
</div>